---
const sidequests = [
    { name: 'Learn to play the piano', progress: '25%' },
    { name: 'Read 50 books this year', progress: '60%' },
    { name: 'Run a marathon', progress: '10%' },
    { name: 'Visit Japan', progress: 'Not Started' },
    { name: 'Learn to cook a new dish weekly', progress: '5 weeks' },
];
---

<div class="sidequests">
    <h2>Sidequests</h2>
    <div class="quests-container">
        {sidequests.map(quest => (
            <div class="quest-item">
                <span class="quest-name">{quest.name}</span>
                <span class="quest-progress">{quest.progress}</span>
            </div>
        ))}
    </div>
</div>

<style>
    .sidequests {
        padding: 1rem;
        font-family: 'Courier New', Courier, monospace;
        color: var(--text-color);
        height: 100%;
        overflow-y: auto;
    }

    /* Mobile styles */
    @media (max-width: 767px) {
        .sidequests {
            width: 100%;
            padding: 1rem;
            box-sizing: border-box;
        }
    }

    /* Desktop styles */
    @media (min-width: 768px) {
        .sidequests {
            height: 100%;
            padding: 1.5rem 1rem;
        }
    }

    h2 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--accent-color);
        padding-bottom: 0.5rem;
        font-size: 1.2rem;
        color: var(--accent-color);
    }

    /* Pirate theme decorative element */
    h2::before {
        content: 'â˜ ';
        margin-right: 0.5rem;
        display: inline-block;
    }

    .quests-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        width: 100%;
    }
    
    .quest-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        padding: 0.5rem;
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 4px;
        transition: all 0.2s ease;
        background-color: rgba(26, 60, 94, 0.1);
    }
    
    .quest-item:hover {
        border-color: var(--accent-color);
        transform: translateX(3px);
        background-color: rgba(26, 60, 94, 0.2);
    }

    .quest-name {
        flex-grow: 1;
        margin-right: 0.5rem;
        font-weight: 500;
    }

    .quest-progress {
        font-weight: bold;
        color: var(--accent-color);
        text-align: right;
        min-width: fit-content;
        padding: 0.1rem 0.4rem;
        border-radius: 3px;
        background-color: rgba(212, 175, 55, 0.1);
        font-size: 0.8rem;
    }

    /* Mobile: Stack progress on new line for very small screens */
    @media (max-width: 480px) {
        .quest-item {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.4rem;
            padding: 0.75rem;
        }

        .quest-progress {
            text-align: left;
            font-size: 0.8rem;
            align-self: flex-end;
        }
        
        h2 {
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
        }
    }
    
    /* Medium screens: Show in a grid */
    @media (min-width: 481px) and (max-width: 767px) {
        .quests-container {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }
        
        .quest-item {
            flex-direction: column;
            padding: 0.75rem;
        }
        
        .quest-progress {
            align-self: flex-end;
            margin-top: 0.5rem;
        }
    }
</style>
