---
const travelQuests = [
    { name: 'Cross Africa by rail', category: 'travel' },
    { name: 'Visit Turkey with father', category: 'travel' },
    { name: 'Cherry blossoms in Japan with wife', category: 'travel' },
    { name: 'Live among African villages', category: 'travel' },
    { name: 'Dance at Carnival in Brazil', category: 'travel' },
    { name: 'Expedition to Antarctica', category: 'travel' },
    { name: 'Trek through Patagonia with Huck', category: 'travel' },
];

const lifeQuests = [
    { name: 'Launch Brotein to market success', category: 'achievement' },
    { name: 'Found a publicly traded company', category: 'achievement' },
    { name: 'Contribute to anime creation', category: 'creative' },
    { name: 'Complete a marathon', category: 'physical' },
    { name: 'Succeed as a digital nomad', category: 'lifestyle' },
    { name: 'Gift mom a riverside home', category: 'family' },
];

const allQuests = [...travelQuests, ...lifeQuests];
---

<div class="sidequests">
    <h2>Life Quests</h2>
    <div class="quests-container">
        {lifeQuests.map(quest => (
            <div class="quest-item life">
                <span class="quest-name">{quest.name}</span>
            </div>
        ))}
    </div>
    
    <h2>Voyages</h2>
    <div class="quests-container">
        {travelQuests.map(quest => (
            <div class="quest-item travel">
                <span class="quest-name">{quest.name}</span>
            </div>
        ))}
    </div>
</div>

<style>
    .sidequests {
        padding: 1rem;
        font-family: 'Courier New', Courier, monospace;
        color: var(--text-color);
        height: 100%;
        overflow-y: auto;
    }

    /* Mobile styles */
    @media (max-width: 767px) {
        .sidequests {
            width: 100%;
            padding: 1rem;
            box-sizing: border-box;
        }
    }

    /* Desktop styles */
    @media (min-width: 768px) {
        .sidequests {
            height: 100%;
            padding: 1.5rem 1rem;
        }
    }

    h2 {
        text-align: center;
        margin-top: 0;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid var(--accent-color);
        padding-bottom: 0.5rem;
        font-size: 1.2rem;
        color: var(--accent-color);
    }

    /* Pirate theme decorative element */
    h2::before {
        content: 'â˜ ';
        margin-right: 0.5rem;
        display: inline-block;
    }

    .quests-container {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
        width: 100%;
    }
    
    .quest-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-size: 0.9rem;
        padding: 0.5rem;
        border: 1px solid rgba(212, 175, 55, 0.2);
        border-radius: 4px;
        transition: all 0.2s ease;
        background-color: rgba(26, 60, 94, 0.1);
    }
    
    .quest-item:hover {
        border-color: var(--accent-color);
        transform: translateX(3px);
        background-color: rgba(26, 60, 94, 0.2);
    }

    .quest-name {
        flex-grow: 1;
        margin-right: 0.5rem;
        font-weight: 500;
    }

    .quest-item.travel {
        border-left: 3px solid var(--accent-color); /* Using pirate gold accent color */
    }
    
    .quest-item.life {
        border-left: 3px solid var(--accent-color); /* Using pirate gold accent color */
    }

    /* Mobile styles for small screens */
    @media (max-width: 480px) {
        .quest-item {
            padding: 0.75rem;
        }
        
        h2 {
            font-size: 1.1rem;
            margin-bottom: 0.75rem;
            margin-top: 1.5rem;
        }
        
        h2:first-of-type {
            margin-top: 0;
        }
    }
    
    /* Medium screens: Show in a grid */
    @media (min-width: 481px) and (max-width: 767px) {
        .quests-container {
            grid-template-columns: repeat(2, 1fr);
            gap: 0.75rem;
        }
        
        .quest-item {
            padding: 0.75rem;
        }
        
        h2 {
            margin-top: 1.5rem;
        }
        
        h2:first-of-type {
            margin-top: 0;
        }
    }
</style>
