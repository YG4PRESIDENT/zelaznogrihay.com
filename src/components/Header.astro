<header id="main-header">
    <div class="header-container">
        <img src="/images/full-logo-new.png" alt="Virtual Pirates Logo" class="logo-image" />
    </div>
</header>

<script>
    const header = document.getElementById('main-header');
    window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;
        const fadeOutDistance = 200; // a distance in pixels to fade out
        if (scrollPosition < fadeOutDistance) {
            header.style.opacity = `${1 - scrollPosition / fadeOutDistance}`;
        } else {
            header.style.opacity = '0';
        }
    });
</script>

<style>
    header {
        width: 100%;
        padding: 0.75rem 0.5rem;
        font-family: 'Courier New', Courier, monospace;
        color: #0f0;
        text-shadow: 0 0 5px #0f0;
        transition: opacity 0.3s ease-out;
        will-change: opacity;
        border-bottom: 1px solid #0f0;
        box-sizing: border-box;
        position: relative;
        z-index: 10;
        background-color: #0a0a0a;
    }
    
    .header-container {
        max-width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .logo-image {
        max-width: 100%;
        height: auto;
        max-height: 70px;
        object-fit: contain;
    }

    /* Desktop: Larger logo */
    @media (min-width: 768px) {
        header {
            padding: 1rem 2rem;
        }
        
        .header-container {
            justify-content: flex-start;
        }

        .logo-image {
            max-width: 320px;
            max-height: 110px;
        }
    }

    pre {
        margin: 0;
        font-size: 0.8rem;
        line-height: 1;
        white-space: pre;
    }
</style>
