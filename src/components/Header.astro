<header id="main-header">
	<div class="header-container">
		<img src="/images/full-logo-new.png" alt="Virtual Pirates Logo" class="logo-image" />
	</div>
</header>

<script>
    const header = document.getElementById('main-header');
    window.addEventListener('scroll', () => {
        const scrollPosition = window.scrollY;
        const fadeOutDistance = 200; // a distance in pixels to fade out
        if (scrollPosition < fadeOutDistance) {
            header.style.opacity = `${1 - scrollPosition / fadeOutDistance}`;
        } else {
            header.style.opacity = '0';
        }
    });
</script>

<style>
    header {
        width: 100%;
        padding: 1.5rem 1rem;
        font-family: 'Courier New', Courier, monospace;
        color: var(--text-color);
        transition: opacity 0.3s ease-out;
        will-change: opacity;
        border-bottom: 1px solid var(--accent-color);
        box-sizing: border-box;
        position: relative;
        z-index: 10;
        background-color: var(--bg-color);
    }
    
    .header-container {
        max-width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .logo-image {
        max-width: 100%;
        height: auto;
        max-height: 300px;
        object-fit: contain;
        filter: drop-shadow(0 0 12px rgba(212, 175, 55, 0.8));
        transition: all 0.3s ease;
    }
    
    .logo-image:hover {
        transform: scale(1.05);
        filter: drop-shadow(0 0 12px rgba(212, 175, 55, 0.8));
    }

    /* Desktop: Larger logo */
    @media (min-width: 768px) {
        header {
            padding: 1.5rem 2rem;
        }
        
        .header-container {
            justify-content: flex-start;
        }

        .logo-image {
            max-width: 700px;
            max-height: 400px;
        }
    }

    pre {
        margin: 0;
        font-size: 0.8rem;
        line-height: 1;
        white-space: pre;
    }
</style>
